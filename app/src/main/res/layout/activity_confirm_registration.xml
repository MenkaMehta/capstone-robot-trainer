<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmRegistrationActivity">

    <include layout="@layout/common_title" />

    <TextView
        android:id="@+id/confirmrego_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#003366"
        android:layout_marginBottom="26dp"
        android:text="Provide us with your phone number for confirmation" />

        <LinearLayout
            android:id="@+id/LinearLayout_CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirmphonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Phone: " />

            <EditText
                android:id="@+id/confirm_users_phoneEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:inputType="phone" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout_Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Continue" />
    </LinearLayout>
</LinearLayout>


